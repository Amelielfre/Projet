{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="form-custom">
        <h1 class="title-form-custom">Créer un participant</h1>

        {{ form_start(registrationForm) }}


        <div class="group2 mb-3">
            {{ form_row(registrationForm.pseudo,
                {'label':'Pseudo *' ,'attr':{
                    'placeholder': 'Saisissez votre pseudo',
                    'class': "form-control"
                }}) }}
            <div class="error-custom">
                {% if error["pseudo"] is defined %}
                    <i class="fa-solid fa-circle-exclamation"></i>
                    <ul>
                        <li> {{ error["pseudo"] }}</li>
                    </ul>
                {% endif %}
            </div>
        </div>

        <div class="group1 mb-3">
            {{ form_row(registrationForm.prenom,
                {'label':'Prenom ' ,'attr':{'placeholder': 'Saisissez votre prenom',
                    'class': "form-control"}}) }}

        </div>

        <div class="group2 mb-3">
            {{ form_row(registrationForm.nom,
                {'label':'Nom ' ,'attr':{'placeholder': 'Saisissez votre nom',
                    'class': "form-control"}}) }}

        </div>

        <div class="group2 mb-3">
            {{ form_label(registrationForm.email) }}
            {{ form_widget(registrationForm.email,
                {'label':'Email *' ,'attr':{'placeholder': 'Saisissez votre email',
                    'class': "form-control"}}) }}
            <div class="error-custom">
                {% if error["email"] is defined %}
                    <i class="fa-solid fa-circle-exclamation"></i>
                    <ul>
                        <li> {{ error["email"] }}</li>
                    </ul>
                {% endif %}
            </div>
        </div>


        <div class="group2 mb-3">
            {{ form_row(registrationForm.telephone,
                {'label':'Telephone ' ,'attr':{'placeholder': 'Saisissez votre telephone',
                    'class': "form-control"}}) }}

        </div>

        <div class="group2 mb-3">
            {{ form_label(registrationForm.password) }}
            {{ form_widget(registrationForm.password,
                {'label':'Password *','attr':{'placeholder': 'Saisissez votre password',
                    'class': "form-control"} }) }}
            <div class="error-custom">
                {% if form_errors(registrationForm.password) %}
                    <i class="fa-solid fa-circle-exclamation"></i>{{ form_errors(registrationForm.password) }}
                {% endif %}
            </div>
        </div>

        <div class="group2 mb-3">
            {{ form_label(registrationForm.confirm_password) }}
            {{ form_widget(registrationForm.confirm_password,
                {'label':'Confirmer Password *','attr':{'placeholder': 'Saisissez à nouveau votre password',
                    'class': "form-control"} }) }}
            <div class="error-custom">
                {% if form_errors(registrationForm.confirm_password) %}
                    <i class="fa-solid fa-circle-exclamation"></i>{{ form_errors(registrationForm.confirm_password) }}
                {% endif %}
            </div>
            <div class="error-custom">
                {% if error["mdp"] is defined %}
                    <i class="fa-solid fa-circle-exclamation"></i>
                    <ul>
                        <li>{{ error["mdp"] }}</li>
                    </ul>
                {% endif %}
            </div>
        </div>
        <div class="group2 mb-3">
            {{ form_row(registrationForm.site,
                {'label':'Campus *','attr':{'placeholder': 'Campus',
                    'class': "form-control"} }) }}
        </div>

        <div class="group2 mb-3 check-group">
            <div class="input-file-custom">
                {{ form_label(registrationForm.photo) }}
                {{ form_widget(registrationForm.photo, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(registrationForm.photo) }}
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-1 mr-2">Enregistrer</button>


        {{ form_end(registrationForm) }}

    </div>
{% endblock %}

