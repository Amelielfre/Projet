{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="form-custom">
        <h1 class="title-form-custom">Créer un participant</h1>

        {{ form_start(registrationForm) }}


        <div class="group2 mb-3">
            {{ form_row(registrationForm.pseudo,
                {'label':'Pseudo :' ,'attr':{
                    'placeholder': 'Saisissez votre pseudo',
                    'class': "form-control"
                }}) }}

        </div>

        <div class="group1 mb-3">
            {{ form_row(registrationForm.prenom,
                {'label':'Prenom :' ,'attr':{'placeholder': 'Saisissez votre prenom',
                    'class': "form-control"}}) }}

        </div>

        <div class="group2 mb-3">
            {{ form_row(registrationForm.nom,
                {'label':'Nom :' ,'attr':{'placeholder': 'Saisissez votre nom',
                    'class': "form-control"}}) }}

        </div>

        <div class="group2 mb-3">
            {{ form_row(registrationForm.email,
                {'label':'Email :' ,'attr':{'placeholder': 'Saisissez votre email',
                    'class': "form-control"}}) }}

        </div>


        <div class="group2 mb-3">
            {{ form_row(registrationForm.telephone,
                {'label':'Telephone :' ,'attr':{'placeholder': 'Saisissez votre telephone',
                    'class': "form-control"}}) }}

        </div>

        <div class="group2 mb-3">
            {{ form_row(registrationForm.password,
                {'label':'Password :','attr':{'placeholder': 'Saisissez votre password',
                    'class': "form-control"} }) }}

        </div>

        <div class="group2 mb-3">
            {{ form_row(registrationForm.confirm_password,
                {'label':'Confirmer Password :','attr':{'placeholder': 'Saisissez à nouveau votre password',
                    'class': "form-control"} }) }}
            {% if error %}
                {{ error }}
            {% endif %}
        </div>
        <div class="group2 mb-3">
            {{ form_row(registrationForm.site,
                {'label':'Campus :','attr':{'placeholder': 'Campus',
                    'class': "form-control"} }) }}
        </div>

        <div class="group2 mb-3 check-group">
            <div class="checkbox-form">
                {{ form_row(registrationForm.actif, {'label': 'Rendre le participant actif : '}) }}
            </div>
            <div class="input-file-custom">
                {{ form_label(registrationForm.photo) }}
                {{ form_widget(registrationForm.photo, { 'attr': {'class': 'input-file-custom'} }) }}
                {{ form_errors(registrationForm.photo) }}
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-1 mr-2">Enregistrer</button>


        {{ form_end(registrationForm) }}

    </div>
{% endblock %}

