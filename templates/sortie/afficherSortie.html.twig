{% extends 'base.html.twig' %}

{% block title %} Sortie{% endblock %}

{% block body %}
    <h1>Afficher une sortie</h1>

    <br>

    <table class="table">
        <thead>

        <tr>

            <th scope="col">Nom de la sortie :</th>
            <th scope="col">Date et heure début : :</th>
            <th scope="col">Date limite inscription :</th>
            <th scope="col">Nombre de places :</th>
            <th scope="col">Durée en minutes :</th>
            <th scope="col">Description :</th>

            <th scope="col">Campus Organisateur :</th>
            <th scope="col">Ville :</th>
            <th scope="col">Lieu :</th>
            <th scope="col">Rue :</th>
            <th scope="col">Code Postal :</th>


        </tr>

        </thead>
        <tbody>


        <tr>

            <td>{{ sortie.nom }}</td>
            <td>{{ sortie.dateDebut | date('d/m/Y') }} à {{ sortie.dateDebut | date('H:i') }}</td>
            <td>{{ sortie.dateFinInscription | date('d/m/Y') }}</td>
            <td>{{ sortie.nbInscriptionsMax }}</td>
            <td>{{ sortie.duree }}</td>
            <td>{{ sortie.description }}</td>

            <td>{{ sortie.organisateur.site.nom }}</td>
            <td>{{ sortie.lieu.ville.nom }}</td>
            <td>{{ sortie.lieu.nom }}</td>
            <td>{{ sortie.lieu.rue }}</td>
            <td>{{ sortie.lieu.ville.codePostal }}</td>

        </tr>

        </tbody>
    </table>

    <table class="table">
        <thead>

        <tr>

            <th scope="col">Pseudo :</th>
            <th scope="col">Nom : :</th>


        </tr>

        </thead>
        <tbody>



            {% for user in users %}
        <tr>
                <td>{{ user.pseudo }}</td>
                <td>{{ user.nom|upper }}   {{ user.prenom }}</td>
        </tr>
            {% endfor %}



        </tbody>
    </table>


    <button type="submit" class="btn btn-sm btn-primary btn-lieu-custom" id="btn-lieu" name="inscription" value="inscription">
        <a href="{{ path('app_afficher_sortie_inscription', {'id':sortie.id}) }}">INSCRIPTION</a>
    </button>
    <button type="submit" class="btn btn-sm btn-primary btn-lieu-custom" id="btn-lieu" name="desister" value="desister">
        <a href="{{ path('app_afficher_sortie_desister', {'id':sortie.id}) }}">DESISTER</a>
    </button>

{% endblock %}
