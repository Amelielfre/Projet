<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Sortie -- {% block title %}{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
{% set menuUser = {"Mon profil":"#", "Se déconnecter":"app_logout"} %}
{% set menuAdmin = {"Villes:":"#", "Sites":"#", "Espace Admin":"admin", "Mon profil":"#", "Se déconnecter":"app_logout"} %}
<body>
<div class="container">
    <header>
        <div class="header-top">
            <div class="first">
                <img src="{{ asset('/img/logo.jpg') }}" alt="Symfony"/>
                <h1>Sortir.com</h1>
            </div>
            <div class="second">
                <nav>
                    <ul>
                        {% if app.user %}
                            {% if app.user.roles == "ROLE_USER" %}
                                {% for key, value in menuUser %}
                                    <li>
                                        {% if value != "#" %}
                                            <a href="{{ path(value) }}">
                                                {{ key }}
                                            </a>
                                        {% else %}
                                            <a href="#">
                                                {{ key }}
                                            </a>
                                        {% endif %}
                                    </li>
                                {% endfor %}
                            {% else %}
                                {% for key, value in menuAdmin %}
                                    <li>
                                        {% if value != "#" %}
                                            <a href="{{ path(value) }}">
                                                {{ key }}
                                            </a>
                                        {% else %}
                                            <a href="#">
                                                {{ key }}
                                            </a>
                                        {% endif %}
                                    </li>
                                {% endfor %}
                            {% endif %}
                        {% endif %}
                    </ul>
                </nav>
            </div>
        </div>

    </header>
    {% block body %}

    {% endblock %}
</div>
</body>
</html>
