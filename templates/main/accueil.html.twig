{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="first row">
        <div class="col-3 offset-9">
            <table>
                <tr>
                    <th>Date du jour :</th>
                    <th>{{ "now" | date("d/m/Y") }}</th>
                </tr>
                <tr>
                    <th>Participant :</th>
                    <th>{{ app.user.pseudo }}</th>
                </tr>
            </table>
        </div>

    </div>
    <h4>Filtrer les sorties</h4>
    {{ form_start(formFiltres) }}
    <div class="filtres row mb-5">

        <div class="left col-4">

            <div class="champs">
                {{ form_label(formFiltres.site) }}
                {{ form_widget(formFiltres.site) }}
            </div>
            <div class="champs">
                {{ form_label(formFiltres.motCles) }}
                {{ form_widget(formFiltres.motCles) }}
            </div>
            <div class="champs">
                {{ form_label(formFiltres.dateDebut) }}
                {{ form_widget(formFiltres.dateDebut) }}
            </div>
            <div class="champs">
                {{ form_label(formFiltres.dateFin) }}
                {{ form_widget(formFiltres.dateFin) }}
            </div>
        </div>
        <div class="middle col-4 offset-1">
            <div class="champs">
                {{ form_widget(formFiltres.orga) }}
                {{ form_label(formFiltres.orga) }}
            </div>
            <div class="champs">
                {{ form_widget(formFiltres.inscrit) }}
                {{ form_label(formFiltres.inscrit) }}
            </div>
            <div class="champs">
                {{ form_widget(formFiltres.pasInscrit) }}
                {{ form_label(formFiltres.pasInscrit) }}
            </div>
            <div class="champs">
                {{ form_widget(formFiltres.passees) }}
                {{ form_label(formFiltres.passees) }}
            </div>
        </div>
        <div class="right col-2 offset-1">
            <div class="bouton">
                <button class="btn btn-primary btn-lg" type="submit">Rechercher</button>
            </div>
        </div>

    </div>
    {{ form_end(formFiltres) }}
    <div class="affichage">
        <table>
            <thead>
            <tr>
                <th>Nom de la sortie</th>
                <th>Date de la sortie</th>
                <th>Cloture des inscriptions</th>
                <th>inscrits/places</th>
                <th>Etat</th>
                <th>Inscrit</th>
                <th>Organisateur</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% if sorties != null %}
                {% for sortie in sorties %}
                    <tr>
                        <td>{{ sortie.nom }}</td>
                        <td>{{ sortie.dateDebut | date('d/m/Y') }} à {{ sortie.dateDebut | date('H:i') }}</td>
                        <td>{{ sortie.dateFinInscription | date('d/m/Y') }}</td>
                        <td>{{ sortie.nbInscriptionsMax }}</td>
                        <td>{{ sortie.etat.libelle }}</td>
                        <td>oui ?</td>
                        <td>
                            <a href="{{ path('app_profil_afficher', {'id':sortie.organisateur.id}) }}">{{ sortie.organisateur.pseudo }}</a>
                        </td>
                        <td>
                            <a href="{{ path('app_afficher_sortie', {'id':sortie.id}) }}">Afficher</a>
                            {% if app.user.id == sortie.organisateur.id %}
                                <a href="#">Modifier</a>
                            {% endif %}
                            {% if app.user.id == sortie.organisateur.id %}
                                <a href="#">Publier</a>
                            {% endif %}
                            {% if app.user.id == sortie.organisateur.id %}
                                <a href="#">Annuler</a>
                            {% endif %}
                            {% if app.user.id != sortie.organisateur.id %}
                                <a href="#">S'inscrire</a>
                            {% endif %}
                            {% if app.user.id != sortie.organisateur.id %}
                                <a href="#">Se désister</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>
    <div class="bouton mt-3">
        <a class="btn btn-primary btn-lg" href="{{ path('app_sortie_creation') }}">Proposer une sortie</a>
    </div>
{% endblock %}
